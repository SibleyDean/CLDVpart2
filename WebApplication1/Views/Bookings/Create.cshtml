@model eventEasefour.Models.Bookings
@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<!-- Error Summary Display (User-Friendly) -->
@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        <h4 class="alert-heading">Please fix the following errors:</h4>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" enctype="multipart/form-data" class="mt-3">
    <div class="form-group">
        <label asp-for="EventId"></label>
        <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="ImageFile">Image File</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}