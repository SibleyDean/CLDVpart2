@model IEnumerable<eventEasefour.Models.BookingDetails>

@{
    ViewData["Title"] = "Booking Management";
}

<div class="container-fluid">
    <h1>@ViewData["Title"]</h1>

    <!-- ✅ Enhanced Search Box -->
    <form asp-action="Index" method="get" class="mb-3 d-flex">
        <input type="text" name="searchString" class="form-control me-2"
               placeholder="Search by event, venue, or booking ID"
               value="@Context.Request.Query["searchString"]" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Search
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Clear</a>
    </form>

    <!-- ✅ Enhanced Table -->
    <div class="table-responsive mt-3">
        <table class="table table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BookingId)</th>
                    <th>@Html.DisplayNameFor(model => model.EventName)</th>
                    <th>@Html.DisplayNameFor(model => model.EventDate)</th>
                    <th>@Html.DisplayNameFor(model => model.VenueName)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.EventStatus == "Soon" ? "table-warning" :
                                  item.EventStatus == "Completed" ? "table-secondary" : "") text-center">
                            <td>@item.BookingId</td>
                            <td>@item.EventName</td>
                            <td>@item.EventDate.ToString("MMM dd, yyyy h:mm tt")</td>
                            <td class="d-flex align-items-center justify-content-center">
                                @if (!string.IsNullOrEmpty(item.VenueImageUrl))
                                {
                                    <img src="@item.VenueImageUrl"
                                         class="img-thumbnail me-2"
                                         style="max-height: 40px; width: 40px; object-fit: cover; border-radius: 8px;"
                                         alt="@item.VenueName" />
                                }
                                <span>@item.VenueName</span>
                            </td>
                            <td>
                                <span class="badge bg-@(item.EventStatus == "Soon" ? "warning" :
                                                      item.EventStatus == "Completed" ? "secondary" : "success")">
                                    @item.EventStatus
                                </span>
                                @if (item.DaysUntilEvent >= 0)
                                {
                                    <small class="text-muted">(@item.DaysUntilEvent days)</small>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-info me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No bookings found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ✅ Create Button -->
    <p class="mt-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Booking
        </a>
    </p>
</div>

@section Styles {
    <style>
        .img-thumbnail {
            max-height: 40px;
            width: 40px;
            object-fit: cover;
            border-radius: 8px;
        }

        .badge {
            font-size: 0.85em;
            min-width: 80px;
        }

        .table-responsive {
            border-radius: 5px;
            overflow: hidden;
        }

        .d-flex {
            display: flex;
        }

        .me-2 {
            margin-right: 0.5rem;
        }

        .ms-2 {
            margin-left: 0.5rem;
        }

        .text-end {
            text-align: end;
        }
    </style>
}

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}
