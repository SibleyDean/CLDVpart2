@model eventEasefour.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h1>Venue Details</h1>

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <h3>@Model.VenueName</h3>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Location:</dt>
                    <dd class="col-sm-8">@Model.Location</dd>

                    <dt class="col-sm-4">Capacity:</dt>
                    <dd class="col-sm-8">@Model.Capacity</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h5>Image:</h5>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 300px;" alt="Venue Image" />
                }
                else
                {
                    <p class="text-muted">No image available</p>
                }
            </div>
        </div>

        <hr />
        <h4>Associated Bookings</h4>
        @if (Model.Bookings != null && Model.Bookings.Any())
        {
            <table class="table table-striped mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Booking ID</th>
                        <th>Event Name</th>
                        <th>Booking Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Bookings)
                    {
                        <tr>
                            <td>@booking.BookingId</td>
                            <td>@booking.Event?.EventName</td>
                            <td>@booking.BookingDate.ToString("dd MMM yyyy HH:mm")</td>
                            <td>
                                <a asp-controller="Bookings" asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-info btn-sm">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No bookings associated with this venue.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.VenueId" class="btn btn-primary">Edit Venue</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
